<!-- Fixed navbar -->
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Analytics Workbench</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <% if (active_element === 'home') { %>
                    <li class="active">
                <% } else { %>
                    <li>
                <% } %>
                <a href="/">Home</a></li>
                <% if (active_element === 'about') { %>
                    <li class="active">
                <% } else { %>
                    <li>
                <% } %>
                <a href="./about">About</a></li>
                <% if (active_element === 'references') { %>
                    <li class="active">
                <% } else { %>
                    <li>
                <% } %>
                <a href="./references">References</a></li>
            </ul>
            <% if (logged_in) { %>
            <ul class="nav navbar-nav navbar-right">
                <% if (admin) { %>
                    <% if (active_element === 'admin') { %>
                        <li class="active dropdown">
                    <% } else { %>
                        <li class="dropdown">
                    <% } %>
                    <!-- <a href="./admin">Admin</a></li> -->
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admininistration <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="./admin?view=user">User Management</a></li>
                        <li><a href="./admin?view=wfm">Workflow Manager</a></li>
                        <li><a href="./admin?view=ae">Automated Execution</a></li>
                        <li><a href="./admin?view=sw">Saved Workflows</a></li>
                    </ul>
                </li>
                <% } %>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Open Workbench <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <!-- <li class="dropdown-header">The following links lead to the actual workbench:</li> -->
                        <li><a href="./workbench">Classic Version</a></li>
                        <li><a href="./mobile">Mobile Version</a></li>
                    </ul>
                </li>
                <form class="navbar-form navbar-right" role="form" action="/logout" method="get">
                    <button type="submit" class="btn btn-primary">Logout (<%= username %>)</button>
                </form>
            </ul>
            <% } else { %>
            <form class="navbar-form navbar-right" role="form" action="/login" method="post">
                <div class="form-group">
                    <input type="text" placeholder="User or Email" class="form-control" name="username">
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Sign in</button>
            </form>
            <% } %>
        </div><!--/.nav-collapse -->
    </div>
</div>